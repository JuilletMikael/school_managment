<p style="color: green"><%= notice %></p>

<%= render @student %>

<div class="mt-6 flex space-x-4">
  <%= link_to "View Grades", student_grades_path(@student), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
  
  <% if current_user_role == :dean %>
    <%= link_to "Edit this student", edit_student_path(@student), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %> 
    <%= button_to "Destroy this student", @student, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
  <% end %>
  
  <%= link_to "Back to students", students_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
</div>
